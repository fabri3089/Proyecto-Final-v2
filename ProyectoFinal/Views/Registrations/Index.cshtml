@model PagedList.IPagedList<ProyectoFinal.Models.Registration>
@using PagedList.Mvc;
@using ProyectoFinal.Utils
@{
    ViewBag.Title = "Index";
}

<h2>Inscripción a clases</h2>

<p>
    @Html.ActionLink("Inscripción a una nueva clase", "Create")
</p>
<hr />
<div class="container">
    @using (Html.BeginForm("Index", "Registrations", FormMethod.Get, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="control-label col-xs-12 col-sm-3 col-md-4 col-lg-2" for="email">Buscar inscripciones:</label>
            <div class="col-xs-6 col-sm-3 col-md-4 col-lg-3">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control text-box single-line" })
            </div>
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
                <input type="submit" class="btn btn-default" value="Buscar" />
            </div>
        </div>
    }
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <tr class="success">
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.FirstOrDefault().RegistrationID).ToHtmlString(),
                                 "Index",
                                 new { sortOrder = ViewBag.TypeSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.FirstOrDefault().CreationDate).ToHtmlString(),
                                 "Index",
                                 new { sortOrder = ViewBag.CreationDateSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.FirstOrDefault().Status).ToHtmlString(),
                                 "Index",
                                 new { sortOrder = ViewBag.StatusSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
           
            <th>
                @Html.ActionLink("Socio",
                                 "Index",
                                 new { sortOrder = ViewBag.ClientFirstNameSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
            <th>
                @Html.ActionLink("Clase",
                                 "Index",
                                 new { sortOrder = ViewBag.GroupNameSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
            @*<th>
        @Html.ActionLink(@Html.DisplayNameFor(model => model.FirstOrDefault().ClientID).ToHtmlString(),
                         "Index",
                         new { sortOrder = ViewBag.StatusSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
    </th>
    <th>
        @Html.ActionLink(@Html.DisplayNameFor(model => model.FirstOrDefault().GroupID).ToHtmlString(),
                         "Index",
                         new { sortOrder = ViewBag.StatusSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
    </th>
            *@
            <th>Acciones</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
                
                <td>
                    <a href="@Url.Action("Details", "Registrations", new { id = item.RegistrationID })" class="btn btn-primary btn-sm" title="Detalles">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Edit", "Registrations", new { id = item.RegistrationID })" class="btn btn-warning btn-sm" title="Editar">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Delete", "Registrations", new { id = item.RegistrationID })" class="btn btn-danger btn-sm" title="Borrar">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))