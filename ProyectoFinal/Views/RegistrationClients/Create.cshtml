@model ProyectoFinal.Models.Registration

@{
    ViewBag.Title = "Create";
    var group = ViewBag.Group as ProyectoFinal.Models.Group;
    var client = ViewBag.Client as ProyectoFinal.Models.Client;
}

<h2>Inscripción a grupos</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    @Html.Hidden("GroupID", group.GroupID)

    <div class="form-horizontal">
       
        <hr />

        <div class="form-group">
            <p>Cliente</p>
            <div class="col-md-10">
                <p>@client.FirstName @client.LastName</p>
            </div>
        </div>

        <div class="form-group">
            <p>Grupo</p>
            <div class="col-md-10">
                <p>@group.Name</p>
                @*@Html.Label("GroupID", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
