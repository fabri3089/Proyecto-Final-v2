@using ProyectoFinal.Models
@using ProyectoFinal.Utils
@{
    bool showPartial = false;
    bool isEnabled = false;
    if (ViewBag.IsEnabled != null)
    {
        showPartial = true;
        isEnabled = ViewBag.IsEnabled;
    }
}


@if (isEnabled && showPartial)
{
    <div class="row paymentAlert">
        <div class="col-md-12">
            <div class="alert alert-success">
                <strong>Bienvenido!</strong> Su abono está activo. Disfrute su estadía
                <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
        </div>
    </div>

}
else if(showPartial && !isEnabled)
{
    <div class="row paymentAlert">
        <div class="col-md-12">
            <div class="alert alert-danger">
                <strong>Pago vencido.</strong> Lo sentimos, pero su abono ha vencido. Por favor, realice el pago del abono para continuar.
                <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(".paymentAlert .close").click(function () {
        $(".paymentAlert").hide();
    });

</script>
